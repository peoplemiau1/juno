// examples/math.juno - Math utility module

fn square(x) {
    return x * x
}

fn cube(x) {
    return x * x * x
}

fn double(x) {
    return x * 2
}

fn triple(x) {
    return x * 3
}

fn factorial(n) {
    let result = 1
    for (i = 1; i <= n; i++) {
        result = result * i
    }
    return result
}

fn abs_val(x) {
    if (x < 0) {
        return 0 - x
    }
    return x
}
