// Pointer arithmetic and string concatenation test

fn main() {
    // Pointer arithmetic over array
    let arr[3]
    arr[0] = 1
    arr[1] = 2
    arr[2] = 3

    let p = &arr[0]
    let p1 = p + 1
    let p0 = p1 - 1
    let v = *p1 + *p0  // 2 + 1 = 3

    // String concatenation via '+'
    let msg = "Hello, " + "Juno"
    prints(msg)

    return v
}
