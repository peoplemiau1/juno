// test_ptr_v2.juno - Step by step pointer test

fn main() {
    let x = 10
    let ptr = &x
    
    // Read original value
    let val = *ptr      // val should be 10
    
    // Modify through pointer
    *ptr = 42           // x should become 42
    
    // Read modified value
    let x2 = x          // x2 should be 42
    
    // Return just val first
    if (val == 10) {
        return 0
    }
    return 1
}
